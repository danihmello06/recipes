<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".SearchFragment">

        <ImageView
            android:id="@+id/searchBgImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/search_bg_2"
            app:layout_constraintBottom_toTopOf="@id/searchRecycler"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/searchBgGradient"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/gradient"
            app:layout_constraintBottom_toBottomOf="@id/searchBgImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/searchBgImage" />

        <ImageView
            android:id="@+id/searchArrowBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/search_arrow_back_margin_top"
            android:layout_marginTop="@dimen/search_arrow_back_margin_top"
            android:src="@drawable/arrow_back_squared"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/showingResultsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/search_results_text_margin_start"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/search_showing_results_text"
            android:textColor="@color/whiteFF"
            android:textSize="@dimen/search_results_text_size"
            app:layout_constraintBottom_toTopOf="@id/searchRecipeTitle"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/searchRecipeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/search_recipe_title_margin_start"
            android:layout_marginBottom="@dimen/search_recipe_title_margin_bottom"
            android:fontFamily="@font/dmserifdisplay_regular"
            android:textColor="@color/whiteFF"
            android:textSize="@dimen/search_recipe_title_text_size"
            app:layout_constraintBottom_toBottomOf="@id/searchBgImage"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/searchErrorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/search_error_text"
            android:textSize="@dimen/search_error_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/searchRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/search_recycler_margin_horizontal"
            android:layout_marginTop="@dimen/search_recycler_margin_top"
            android:nestedScrollingEnabled="false"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchBgImage"
            app:spanCount="2"
            tools:listitem="@layout/search_item" />

        <ProgressBar
            android:id="@+id/searchProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/search_progress_bar_margin_top"
            android:indeterminate="true"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
