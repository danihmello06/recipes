<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/preparationNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="2"
        android:textColor="@color/orange_theme"
        android:textSize="@dimen/recipe_preparation_number_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/preparationItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/recipe_preparation_item_margin_start"
        android:layout_marginTop="@dimen/recipe_preparation_item_margin_top"
        android:fontFamily="@font/poppins_regular"
        android:paddingEnd="@dimen/recipe_preparation_item_padding_end"
        android:paddingBottom="@dimen/recipe_preparation_item_padding_bottom"
        android:textColor="@color/grey33"
        android:textSize="@dimen/recipe_preparation_item_text_size"
        app:layout_constraintStart_toEndOf="@id/preparationNumber"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>