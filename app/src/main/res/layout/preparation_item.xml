<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/preparationNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:textColor="#F2994A"
        android:text="2"
        android:textSize="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/preparationItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="24dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="6dp"
        android:textColor="#333333"
        android:fontFamily="@font/poppins_regular"
        android:textSize="12dp"
        android:justificationMode="inter_word"
        android:text="Preparation 123Preparation 123Preparation 123Preparation 123Preparation 123Preparation 1222"
        app:layout_constraintStart_toEndOf="@id/preparationNumber"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>