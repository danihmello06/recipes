<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/circle_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circle_ingredient_item"
        app:layout_constraintBottom_toBottomOf="@id/ingredientItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ingredientItem"/>

    <TextView
        android:id="@+id/ingredientItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="#333333"
        android:paddingEnd="60dp"
        android:layout_marginEnd="90dp"
        android:textSize="12dp"
        android:text="Ingredient 1233333333333333 Ingredient 12333333333333"
        app:layout_constraintStart_toEndOf="@id/circle_item"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>