<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/search_item_margin_horizontal"
    android:layout_marginVertical="@dimen/search_item_margin_vertical"
    app:cardCornerRadius="@dimen/search_item_corner_radius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_F4">

        <ImageView
            android:id="@+id/searchItemImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/image_placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/searchItemBgGradient"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/gradient"
            app:layout_constraintBottom_toBottomOf="@id/searchItemImage"
            app:layout_constraintEnd_toEndOf="@id/searchItemImage"
            app:layout_constraintStart_toStartOf="@id/searchItemImage"
            app:layout_constraintTop_toTopOf="@id/searchItemImage" />

        <TextView
            android:id="@+id/searchTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/search_item_title_margin_start"
            android:layout_marginBottom="@dimen/search_item_title_margin_bottom"
            android:fontFamily="@font/poppins_medium"
            android:paddingEnd="@dimen/search_item_title_padding_end"
            android:textColor="@color/whiteFF"
            android:textSize="@dimen/search_item_title_text_size"
            app:layout_constraintBottom_toBottomOf="@id/searchItemImage"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
