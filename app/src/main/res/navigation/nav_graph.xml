<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_home">

    <fragment
        android:id="@+id/fragment_home"
        android:name="danihmello.tcc.recipes.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_home_to_search"
            app:destination="@id/fragment_search">
            <argument
                android:name="WORD"
                android:defaultValue="pudim"
                app:argType="string"
                />
        </action>
    </fragment>

    <fragment
        android:id="@+id/fragment_search"
        android:name="danihmello.tcc.recipes.ui.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search">

        <action
            android:id="@+id/action_search_to_recipe"
            app:destination="@id/fragment_recipe">
            <argument
                android:name="SLUG"
                android:defaultValue="pudim-de-mandioca-com-cumaru"
                app:argType="string"
                />
            <argument
                android:name="AUTHOR"
                android:defaultValue="author"
                app:argType="string"
                />
        </action>
    </fragment>


    <fragment
        android:id="@+id/fragment_recipe"
        android:name="danihmello.tcc.recipes.ui.RecipeFragment"
        android:label="RecipeFragment"
        tools:layout="@layout/fragment_recipe">

    </fragment>


</navigation>