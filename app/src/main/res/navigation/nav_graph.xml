<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_search">

    <fragment
        android:id="@+id/fragment_search"
        android:name="com.example.recipes.ui.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search">

        <action
            android:id="@+id/action_homesearch_to_recipe"
            app:destination="@id/fragment_recipe">
            <argument
                android:name="SLUG"
                app:argType="string"
                app:nullable="false"/>

        </action>
    </fragment>


    <fragment
        android:id="@+id/fragment_recipe"
        android:name="com.example.recipes.ui.RecipeFragment"
        android:label="RecipeFragment"
        tools:layout="@layout/fragment_recipe">

        <action
            android:id="@+id/action_recipe_to_homesearch"
            app:destination="@id/fragment_search">
            <argument
                android:name="SLUGDOIS"
                app:argType="string"
                app:nullable="false"/>
        </action>

    </fragment>


</navigation>